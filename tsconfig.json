{
    "extends": "@tsconfig/node16-strictest/tsconfig.json",
    "compilerOptions": {
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "sourceMap": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "dist",
        "rootDir": "src",
    },
    "ts-node": {
        "transpileOnly": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": true
}